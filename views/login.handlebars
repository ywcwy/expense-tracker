<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="my-3 text-center">Login</h1>
      {{>message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label><input type="email" name="email" id="email" placeholder="your email"
            class="form-control">
        </div>
        <div class="form-group">
          <label for="password">Password</label><input type="password" name="password" id="password"
            placeholder="your password" class="form-control">
        </div>
        <button class="btn btn-warning btn-block">Login</button>
        <p class="lead mt-3">No Account? <a href="/users/register">Register</a></p>
      </form>
    </div>
  </div>
</div>